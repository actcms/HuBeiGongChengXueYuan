<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical" >

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.28"
        android:background="#E0EEEE"
        android:padding="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学号："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/studentID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="请输入学号" >

                <requestFocus android:layout_width="match_parent" />
            </EditText>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            		  android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="请输入密码"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码:"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/checkCodePhoto"
                android:layout_width="62dp"
                android:layout_height="30dp"
                android:paddingTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/jiazai"/>

            <EditText
                android:id="@+id/checkCode"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:singleLine="true" />

            <Button
                android:id="@+id/refresh"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="刷新" />

            <Button
                android:id="@+id/enter"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="确定" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需要获取的数据：" />
        

        <CheckBox
            android:id="@+id/scoreCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="成绩" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/timetableCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="课表" />
			<TextView 
			    android:id="@+id/classtime"
			    android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
<!--             <Button
                android:id="@+id/loginbutton5"
                android:layout_width="137dp"
                android:layout_height="wrap_content" /> -->
        </LinearLayout>

        <CheckBox
            android:id="@+id/bxCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="大学必修课程" />

        <CheckBox
            android:id="@+id/gradeTestCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="等级考试" />

    </LinearLayout>

</LinearLayout>